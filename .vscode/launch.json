{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Node.js Backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "DATABASE_URL": "postgres://admin:password@localhost:5432/golf_league"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug React Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src"
    }
  ]
}
